// В символьной строке удалить слово, стоящее после запятой

#include <stdio.h>

#define		NO		0
#define		YES		1

int letterCheck ( char ptr );

void processLine( char buffer[] );

int main(void)
{
	char line[1000];

	gets(line);
	processLine(line);
	puts(line);
	getchar();
	return 0;
}

void processLine( char buffer[] )
{
	char *bufferPtr;
	char *wordPtr;
	int found;
	int ctrOfLetters;

	found = NO;
	bufferPtr = buffer;
	wordPtr = buffer;
	
	while ( *bufferPtr != '\0' )
	{
		if ( *bufferPtr == ',' || *(bufferPtr - 1) == ',' && *bufferPtr == ' ' ) // проверка на запятую или на один пробел после запятой
			found = YES;

		if ( letterCheck( *bufferPtr ) && found )
		{
				wordPtr = bufferPtr;
				ctrOfLetters = 0;

				while ( letterCheck( *bufferPtr ) ) // подсчет количества букв в слове
				{
						ctrOfLetters++;
						bufferPtr++;
				}

				while ( *bufferPtr != '\0' ) // удаление
				{
						*(bufferPtr - ctrOfLetters) = *bufferPtr;
						bufferPtr++;
				}

				*bufferPtr = '\0';
				bufferPtr = wordPtr;
				found = NO;
		}
		bufferPtr++;
	}
}

int letterCheck ( char ptr ) {
	return ( ptr != ' ' && ptr != '.' && ptr != ',' && ptr != '\n' && ptr != '\0' );
}
